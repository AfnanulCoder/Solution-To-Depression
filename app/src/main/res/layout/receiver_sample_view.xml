<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/receiverSampleViewID"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/receiverProfilePicID"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/common_pro_pic"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/senderNameForReceiverID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:text="Mr. Afnan"/>

    </LinearLayout>

    <TextView
        android:id="@+id/showMessageID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assalamualikum"
        android:textColor="#000000"
        android:textSize="15dp"
        android:padding="20dp"
        android:background="@drawable/message_receiver_background"
        />




</LinearLayout>