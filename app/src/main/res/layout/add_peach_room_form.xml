<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peace Room"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:id="@+id/peachRoomNameID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rectenguler"
        android:padding="5dp"
        android:inputType="text"
        android:layout_marginBottom="10dp"
        android:textCursorDrawable="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:hint="Peach Room Name"
        />


    <EditText
        android:id="@+id/peachRoomCategoryID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rectenguler"
        android:padding="5dp"
        android:inputType="textShortMessage"
        android:layout_marginBottom="10dp"
        android:textCursorDrawable="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:hint="Category"
        />

    <EditText
        android:id="@+id/peachRoomSDescriptionID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rectenguler"
        android:padding="5dp"
        android:inputType="textShortMessage"
        android:layout_marginBottom="10dp"
        android:textCursorDrawable="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:hint="Shart Description"
        />

    <EditText
        android:id="@+id/peachRoomLevelID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_rectenguler"
        android:padding="5dp"
        android:inputType="number"
        android:layout_marginBottom="15dp"
        android:textCursorDrawable="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:hint="Level (1 to 3)"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        >

        <Button
            android:id="@+id/peachRoomButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_shape"
            android:padding="15dp"
            android:text="Create"
            />

    </LinearLayout>



</LinearLayout>