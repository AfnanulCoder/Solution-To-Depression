<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpForm"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="2"
        >

        <Button
            android:id="@+id/needHelpButtonID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Need Help"
            android:textColor="#ffffff"
            android:background="#55000000"
            android:onClick="NeedHelpButton"
            />


        <Button
            android:id="@+id/wantToHelpButtonID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Want To Help"
            android:textColor="#ffffff"
            android:background="#55000000"
            android:onClick="WantToHelpButton"
            />


    </LinearLayout>


    <ScrollView
        android:id="@+id/needHelpLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_shape"
                android:text="Sign Up Form"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="35sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#50D150"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/needHelpFnameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="text"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:hint="Nick Name (If You Want)"
                />


            <ProgressBar
                android:id="@+id/needHelpProgressBarID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender    "
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <RadioGroup
                android:id="@+id/needHelpGenderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <RadioButton
                    android:id="@+id/NeedHelpMaleID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    />

                <RadioButton
                    android:id="@+id/NeedHelpFemaleID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    />

            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/needHelpAgeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="number"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tell something about you"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:id="@+id/needHelpAlineID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="text"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/needHelpeMailID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/needHelpPasswordID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="textPassword"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/needHelpConfirmPasswordID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="textPassword"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp" />



            <Button
                android:id="@+id/needHelpNextButtonID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/round_corner_shape"
                android:shadowColor="@color/colorPrimary"
                android:text="Next"
                android:textColor="@color/blue"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:onClick="NeedHelpNext"
                android:layout_marginBottom="30dp"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/needHelpRegistrationButtonID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/round_corner_shape"
                android:shadowColor="@color/colorPrimary"
                android:text="Choose Your Peach Room"
                android:textColor="@color/blue"
                android:layout_centerHorizontal="true"
                android:onClick="NeedHelpSignUpNow"
                android:layout_marginBottom="30dp"
                />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/wantToHelpLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_shape"
                android:text="Sign Up Form"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="35sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#50D150"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/wantToFnameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="text"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp" />


            <ProgressBar
                android:id="@+id/wantToProgressBarID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender    "
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <RadioGroup
                android:id="@+id/wantToGenderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/wantToMailID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    />

                <RadioButton
                    android:id="@+id/wantToFemailID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    />

            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/wantToAgeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="number"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/wantToeMailID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/wantToPasswordID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="textPassword"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/wantToConfirmPassID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_rectenguler"
                android:padding="5dp"
                android:inputType="textPassword"
                android:layout_marginBottom="15dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:paddingLeft="10dp" />


            <Button
                android:id="@+id/registrationButtonID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/round_corner_shape"
                android:shadowColor="@color/colorPrimary"
                android:text="Sign Up now"
                android:layout_marginTop="10dp"
                android:textColor="@color/blue"
                android:layout_centerHorizontal="true"
                android:onClick="WantToHelpSignUpNow"
                android:layout_marginBottom="30dp"
                />

        </LinearLayout>

    </ScrollView>



</LinearLayout>